<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="wee.ResourceUtils"
		class="cn.ursun.platform.core.util.ResourceUtils"
		factory-method="getInstance">
		<property name="errorResourceBundle"
			value="errorcodes-resource">
		</property>
		<property name="configBundle" value="system-parameters"></property>
	</bean>

	<bean id="wee.ConfigUtils"
		class="cn.ursun.platform.core.util.ConfigUtils"
		factory-method="getInstance">
	</bean>
</beans>